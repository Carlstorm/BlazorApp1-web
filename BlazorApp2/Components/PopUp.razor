@using BlazorApp2.SvgComponents;

@if (Open)
{
    <div class="overlay open" @onclick="TriggerClose">
        <div class="content_container" @onclick:stopPropagation>
            <div class="close_button" @onclick="TriggerClose"><CrossIcon /></div>
            @ChildContent
        </div> 
    </div>
}

@code {
    [Parameter]
    public bool Open { get; set; }

    [Parameter]
    public EventCallback ClosePopUp { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    async Task TriggerClose()
    {
        await ClosePopUp.InvokeAsync();
    }

}
